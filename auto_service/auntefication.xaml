<Window x:Class="auto_service.auntefication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:auto_service"
        mc:Ignorable="d"
        Title="Авторизация" Height="180" Width="200" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">Введите пароль:</TextBlock>
        <TextBox Name="password" Grid.Row="1" Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"></TextBox>
        <Button Name="btnAuntOK" Grid.Row="2" Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Click="btnAuntOK_Click" IsDefault="True">OK</Button>
        <Button Name="btnAuntCan" Grid.Row="3" Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" IsCancel="True">Отмена</Button>
    </Grid>
</Window>
